<div class="homepage-blogfeed">
  <div class="section-header text-center">
    <div class="section-header-title">Blogs by Sundari Silks</div>
    <div class="section-header-content">Stories of Fabrics, Styling Tips, Decor Inspiration and more…</div>
  </div>
  <div class="section-content">
    <div class="blog-feed-container">
      {% if section.settings.blog != blank and section.settings.blog.articles_count > 0 %}

      {% for article in section.settings.blog.articles limit: 4 %}
      <div class="blog-feed-card">
        <div class="blog-feed-card-wrapper">
          <a href=" {{ article.url }}" class="blog-feed-card-link">
            {% if article.image %}
            <img id="Image-{{ article.id }}" loading="lazy" class="{{ article_class }} blog-feed-card-image"
              src="{{article.image.src | image_url: width:404, height: 296, crop: 'top'  }}"
              alt="{{ article.image.alt | escape }}">
            {% else %}
            {{ 'collection-2' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
            <h3 class="blog-feed-card-title"> {{ article.title | escape }} </h3>
            <p class="blog-feed-card-content">
              {% if article.excerpt.size > 0 %}
              {{ article.excerpt | strip_html | truncate: 100 }}
              {% else %}
              {{ article.content | strip_html | truncate: 100 }}
              {% endif %}
            </p>
            <p class="blog-feed-card-cta"> Read More </p>
          </a>
        </div>
      </div>
      {% endfor %}
      {% endif %}

    </div>
  </div>
</div>

{% schema %}
{
"name": "Blog posts",
"class": "homepage-section",
"tag": "section",
"settings": [
{
"type": "text",
"id": "heading",
"default": "Blogs by Sundari Silks",
"label": "Blog Title"
},
{
"type": "text",
"id": "richtext",
"default": "Stories of Fabrics, Styling Tips, Decor Inspiration and more…",
"label": "Blog Description"
},
{
"type": "blog",
"id": "blog",
"label": "Blog"
},
{
"type": "checkbox",
"id": "blog_show_author",
"label": "Show author",
"default": true
}
]
}
{% endschema %}
